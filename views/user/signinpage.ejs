<head>
    <%- include('../common/head') %>

        <%- include('../common/homestyle') %>
</head>
<body>
    <header>
        <%- include('../common/header', { links: navbar.links }) %>
    </header>
    <div class="container">
        <h1 class="text-center mt-5">Sign Un</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="/users/signin" id="userForm">
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name" required>
                        <span></span>
                    </div>
                    <div class="form-group">
                        <label for="mail">Your Email</label>
                        <input name="mail" type="email" class="form-control" id="email" placeholder="Enter your email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="message" placeholder="Enter your password"
                            required></input>
                    </div>
                    <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
                    <span>Already have a user?</span> <a href="/users/login">Login</a>
                </form>
            </div>
        </div>
    </div>

<footer>
    <%- include('../common/footer') %>
</footer>

</body>